@model Report.BLL.Models.LoginViewModel

<h1>
    Login
</h1>

<div class="col-lg-10 mt-5 mt-lg-0">
    <form asp-controller="User" asp-action="LoginUser">

        <div class="form-group ">
            <label asp-for="@Model.Email">Email</label>
            <input asp-for="@Model.Email" type="email" class="form-control" id="Email">
            <span style="color: red" asp-validation-for="Email"></span>
        </div>

        <div class="form-group ">
            <label asp-for="@Model.Password">Password</label>
            <input class="form-control" id="password" type="password" asp-for="@Model.Password">
            <span style="color: red" asp-validation-for="Password"></span>
        </div>

        @*<a asp-action="Login" asp-controller="User">Click here to login</a>*@
        <br />
        <div>
            <button type="submit">Submit</button>
        </div>
    </form>
</div>

