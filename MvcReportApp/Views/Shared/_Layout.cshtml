<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hero Report App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcReportApp.styles.css" asp-append-version="true" />
</head>
<body>

    <header id="header">
        <div class="container d-flex align-items-center justify-content-between">

            <h1 class="logo">
                <a asp-area="" asp-controller="Home" asp-action="Index">Hero Report App</a>
            </h1>

            <nav id="navbar" class="navbar">
                <ul>                   
                    <li>
                        <a class="nav-link scrollto active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>                    

                    <li>
                        <a class="getstarted scrollto" asp-area="" asp-controller="RiskReport" asp-action="Create">Get Started</a>
                    </li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>

        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Hero Report App 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
